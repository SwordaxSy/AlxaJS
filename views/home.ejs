                    <span class="color-c">// result: 3.16667</span><br />
                    <span class="color-n">Alxa</span>.<span class="color-y"
                        >median</span
                    >(<span class="color-n">numbers</span>);
                    <span class="color-c">// result: 3</span><br />
                    <span class="color-n">Alxa</span>.<span class="color-y"
                        >mode</span
                    >(<span class="color-n">numbers</span>);
                    <span class="color-c">// result: 3</span><br />
                    <span class="color-n">Alxa</span>.<span class="color-y"
                        >range</span
                    >(<span class="color-n">numbers</span>);
                    <span class="color-c">// result: 5</span><br />
                </div>
