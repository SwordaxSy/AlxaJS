                    <br />
                    <span class="color-c"
                        >// with uppercase letters and numbers only</span
                    >
                    <br /><br />
                    <span class="color-v">const</span>
                    <span class="color-n">options</span> = {<br />
                    <span class="indentation"></span
                    ><span class="color-g">lowercase</span>:
                    <span class="color-n">false</span>, <br /><span
                        class="indentation"
                    ></span
                    ><span class="color-g">symbols</span>:
                    <span class="color-n">false</span>,<br />
                    <span class="indentation"></span
                    ><span class="color-g">length</span>:
                    <span class="color-t">12</span><br />} <br /><br />
                    <span class="color-v">const</span>
                    <span class="color-n">string</span> =
                    <span class="color-n">Alxa</span>.<span class="color-y"
                        >randomString</span
                    >(<span class="color-n">options</span>); <br /><br />
                    <span class="color-n">console</span>.<span class="color-y"
                        >log</span
                    >(<span class="color-n">string</span>);
                    <span class="color-c"
                        >// result: <span class="random-string"></span
