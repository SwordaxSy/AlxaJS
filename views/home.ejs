                    <span class="color-n">date</span> =
                    <span class="color-y">new</span>
                    <span class="color-g">Date</span>();<br /><br />
                    <span class="color-n">console</span>.<span class="color-y"
                        >log</span
                    >(<span class="color-n">Alxa</span>.<span class="color-y"
                        >formatDate</span
                    >(<span class="color-n">date</span>,
                    <span class="color-t">"dd/mm/yy"</span>));
                    <br />
                    <span class="color-c"
                        >// result: <span class="today-day"></span>/<span
